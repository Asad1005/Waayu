@model Interim.Models.Biometric

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout - register";

}


    <div class="col-md-4" style="margin-left:30%;margin-top:20px">
    <h1 style="color:white"><span style="font-size:30px">Register your</span> Bio<span style="color:orange">Metric</span></h1>
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
           <div class="col">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" placeholder="in inches" />
                <span asp-validation-for="Height" class="text-danger"></span><br>
            </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" placeholder="in Kgs"/>
                <span asp-validation-for="Weight" class="text-danger"></span><br>
            </div>
            </div>
            <div class="col">
            <div class="form-group">
                <label asp-for="BloodGroup" class="control-label"></label>
                <input asp-for="BloodGroup" class="form-control" />
                <span asp-validation-for="BloodGroup" class="text-danger"></span><br>
            </div>
            </div>
        </div>
            <div class="form-group">
                <label asp-for="Disease" class="control-label"></label>
                <input asp-for="Disease" class="form-control" />
                <span asp-validation-for="Disease" class="text-danger"></span><br>
            </div>
            <div class="form-group" >
            <input type="submit" value="Create" class="btn btn-primary" style="width:100%;color:black;background-color:orange" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<Interim.Models.Biometric>


@{
    ViewData["Title"] = "Index";
    Layout = "_Layout - register";
}

<h3 style="font-family:'Century Gothic'">User List</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disease)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disease)
            </td>
            <td>
                <a asp-action="Edit_Admin" asp-route-id="@item.RegistrationID">Edit</a> |
                
                <a asp-action="Delete" asp-route-id="@item.RegistrationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


    <form>
        
        <input type="submit" value="Logout" class="btn btn-danger" asp-action="Index" asp-controller="Home"/> 

    </form>

